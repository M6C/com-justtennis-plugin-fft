<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--android:paddingStart="@dimen/fb_list_item_padding"-->
    <!--android:paddingTop="@dimen/fb_list_item_padding"-->
    <!--android:paddingEnd="@dimen/fb_list_item_padding"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/fb_user_avatar_size"
            android:layout_height="@dimen/fb_user_avatar_size"
            android:layout_marginLeft="@dimen/fb_user_avatar_margin"
            android:layout_marginRight="@dimen/fb_user_avatar_margin"
            android:layout_gravity="center"
            android:contentDescription="@string/defaultUserImage"
            style="@style/ItemListPublicationAvatar"
            app:srcCompat="@drawable/ic_default_user"
            tools:ignore="VectorDrawableCompat" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/fb_user_avatar_margin"
            android:paddingRight="@dimen/fb_user_avatar_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/publication_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/desc_publication_message"
                android:layout_marginTop="@dimen/fb_text_vertical_margin"
                android:textAppearance="@style/ItemListPublicationMessage" />

            <TextView
                android:id="@+id/publication_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fb_text_vertical_margin"
                android:layout_marginBottom="@dimen/fb_text_vertical_margin"
                android:hint="@string/desc_publication_date"
                android:textAppearance="@style/ItemListPublicationDate"/>

        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/publication_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fb_publication_loader_horizontal_size"
        android:foregroundGravity="fill"
        android:max="100"
        android:indeterminate="true" />

</LinearLayout>